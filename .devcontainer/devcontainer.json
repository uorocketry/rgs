{
	"name": "Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"forwardPorts": [],
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"GitHub.copilot-labs",
				"rust-lang.rust-analyzer",
				"svelte.svelte-vscode",
				"VisualStudioExptTeam.vscodeintellicode",
				"alex-young.pm2-explorer",
				"esbenp.prettier-vscode"
			]
		}
	},
	"postCreateCommand": "chmod u+x ./scripts/postcreate.sh && cd scripts && ./postcreate.sh"
}