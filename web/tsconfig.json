{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"moduleResolution": "Bundler",
		"plugins": [
			{
				"name": "ts-graphql-plugin",
				"schema": "localhost:4000/v1/graphql",
				"tag": "gql"
			}
		]
	}
}
