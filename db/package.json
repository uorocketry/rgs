{
    "name": "@rgs/db",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "bootstrap": "echo $npm_execpath > ./.npm_execpath && chmod u+x ./bootstrap.sh && ./bootstrap.sh",
        "dk": "drizzle-kit",
        "up": "drizzle-kit up:pg",
        "push": "drizzle-kit push:pg",
        "introspect": "drizzle-kit introspect:pg",
